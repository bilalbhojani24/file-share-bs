<h2 class="text-center mb-4">Create New User</h2>
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.each do |err| %>
      <li class="text-danger"><%= err.message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_tag("/sign_up", method: "post") do %>
  <input type="text" name="name" placeholder="Enter your name..." class="form-control mb-4" />
  <input type="text" name="username" placeholder="Enter your username..." class="form-control mb-4" />
  <input type="email" name="email" placeholder="Enter your email.." class="form-control mb-4" />
  <input type="password" name="password_digest" placeholder="Enter your password.." class="form-control mb-4" />
  <input type="submit" value="Sign up" class="btn btn-dark" />
<% end %>
