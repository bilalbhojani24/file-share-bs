<h2 class="text-center mb-4">Sign in</h2>
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.each do |err| %>
      <li class="text-danger"><%= err.message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_tag("/sign_in", method: "post") do %>
  <input type="text" name="username" placeholder="username"  class="form-control mb-4" />
  <input type="password" name="password" placeholder="password" class="form-control mb-4"  />
  <input type="submit" value="Sign in" class="btn btn-dark" />
  <% if @params %>
    <div class="form-message">
      <small class="text-danger">Username or Password incorrect! Please try again</small>
    </div>
  <% end %>
<% end %>
